# Compliance Server Docker Configuration
# Copy this file to .env and customize for your deployment

# ===========================
# Server Configuration
# ===========================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
HOST_PORT=8080
HOST_TLS_PORT=8443

# ===========================
# TLS/HTTPS Configuration
# ===========================
TLS_ENABLED=false
TLS_CERT_FILE=certs/server.crt
TLS_KEY_FILE=certs/server.key

# ===========================
# Database Configuration
# ===========================
DB_TYPE=sqlite
DB_PATH=data/compliance.db

# ===========================
# Authentication
# ===========================
AUTH_ENABLED=true
AUTH_REQUIRE_KEY=false
USE_HASHED_KEYS=false

# ===========================
# Dashboard Configuration
# ===========================
DASHBOARD_ENABLED=true
DASHBOARD_PATH=/dashboard
DASHBOARD_LOGIN_MESSAGE=Welcome to Compliance Toolkit

# ===========================
# Logging Configuration
# ===========================
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout

# ===========================
# Timezone
# ===========================
TZ=UTC

# ===========================
# Advanced Options
# ===========================
# Uncomment to enable specific features

# Enable TLS for production
# TLS_ENABLED=true

# Require API keys for all clients
# AUTH_REQUIRE_KEY=true

# Use hashed API keys for enhanced security
# USE_HASHED_KEYS=true

# Change log format to text (easier to read in dev)
# LOGGING_FORMAT=text

# Set timezone
# TZ=America/New_York
